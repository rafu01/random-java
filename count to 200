import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt(); 
        int i, count=0;
        for(i=n;i<=200;i*=2)
        {
            count++;
        }
        count-=1;
        //System.out.println(count);
        for(i/=2;i<=200;i++)
        {
            count++;
        }
        count-=1;
        System.out.println(count);
    }
    
}
